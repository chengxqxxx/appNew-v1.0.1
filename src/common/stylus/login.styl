.login, .register, .forget
	position:absolute
	display:flex
	top:0
	left:0
	bottom:0
	right:0
	height:100%
	width:100%
	bg-image('http://asset.ibanquan.com/image/5b79fb3253f4e367aa000747/s.jpeg?v=1534720818')
	background-size:cover
	text-align:center
	.wrap
		height:100%
		padding:0 20px
		background-color:#fff
		h1
			margin-top:110px
			margin-bottom:30px
			color:#4DD0E1
			font-weight:bolder
		h4
			padding:0 30px
			margin-bottom:60px
			line-height:26px
			color:#495060
			font-weight:400
			text-align:center
		.input-field
			.input-item
				input
					margin-top:5px
					input(260px,#4DD0E1)
					border-1px(#E0E0E0)
					&.is-danger
						border:#ff8390 1px solid
				.input-error
					position:relative
					width:260px
					left:50%
					margin-left:-130px
					margin-top:5px
					color:#ff8390
					text-align:left
			button
				margin-top:30px
				button-confirm(#4DD0E1)
		.footer
			position:absolute
			width:160px
			left:19%
			bottom:10px
			margin-left:-80px
			text-align:center
			.strong
				color:#4DD0E1

.login
	.wrap
		.input-field
			.toforget
				position:relative
				display:inline-block
				top:-26px
				left:105px
				color:#4DD0E1
			.toregister
				margin-top:10px
				a
					display:inline-block
				.strong
					color:#4DD0E1
					text-decoration:underline
.register, .forget
	.wrap
		.input-field
			.tologin
				margin-top:10px
				.strong
					color:#4DD0E1
					text-decoration:underline

@media (max-width: 768px)
	.login, .register, .forget
		.wrap
			padding:0
			h1
				margin-top:80px
				color:#fff
			h4
				margin-bottom:30px
				color:#fff
			background:none
			.footer
				width:138px
				left:50%
				margin-left:-69px
				color:#fff
	.login
		.wrap
			.input-field
				.toregister
					color:#fff
	.register, .forget
		.wrap
			.input-field
				.tologin
					color:#fff