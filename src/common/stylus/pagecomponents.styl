.header
	position: absolute
	display:flex
	top:0
	left:0
	right:0
	width:100%
	height:45px
	line-height:45px
	color:#fff
	.sidebar-button
		display:block
		text-align:center
		i
			font-size:30px
	.logo
		a
			color:#fff
	.menubar
		ul
			display:flex
			li
				a
					padding:0 20px
					color:#fff
	.userbar
		i
			font-size:30px
		span
			position:relative
			top:-5px
			margin-left:10px
			&:after
				position:relative
				top:15px
				margin-left:10px
				border-top:6px solid #fff
				border-right:6px solid transparent
				border-left:6px solid transparent
				height:0
				width:0
				content:''
	.main-sidebar-backdrop
		position:fixed
		top:0
		bottom:0
		left:0
		right:0
		height:100%
		width:100%
		z-index:98
		background-color:rgba(0,0,0,0.4)
		&.fade-enter-active, &.fade-leave-active
			transition:all .5s ease
			.main-sidebar
				transition:all .5s ease
		&.fade-enter, &.fade-leave-active
			opacity: 0
			.main-sidebar
				opacity: 0
				transform:translateX(-30%)
		.main-sidebar
			position:fixed
			top:0
			left:0
			bottom:0
			width:30%
			height:100%
			z-index:99
			background-color:#fff
			transition: all .5s ease
			button
				position:relative
				left:100%
				margin-left:-50px
				background:none
				border:none
				outline:none
				i
					font-size:26px
					color:#9E9E9E
					&:hover
						color:#E0E0E0
			ul
				border-top-1px(#E0E0E0)
				li
					display:block
					padding:10px 0
					text-align:center
					color:#424242
					border-bottom-1px(#E0E0E0)
					&:hover
						background-color:#E0E0E0
	.user-popup-backdrop
		position:fixed
		top:0
		bottom:0
		left:0
		right:0
		height:100%
		width:100%
		z-index:98
		background-color:rgba(0,0,0,0.4)
		&.fade-enter-active, &.fade-leave-active
			transition: all 0.3s ease
			.user-popup
				transition: all 0.3s ease
		&.fade-enter, &.fade-leave-active
			opacity: 0
			.user-popup
				opacity: 0
				transform:translateY(-10px)
		&::before
			position:absolute
			top:40px
			right:4%
			margin-right:20px
			border-bottom:6px solid #fff
			border-right:6px solid transparent
			border-left:6px solid transparent
			height:0
			width:0
			content:''
		.user-popup
			position:fixed
			top:45px
			right:4%
			height:140px
			width:130px
			z-index:99
			background-color:#fff
			border:none
			border-radius:5px
			text-align:center
			ul
				a
					li
						border-bottom-1px(#E0E0E0)
						border-radius:5px 5px 0 0
				div
					li
						border-radius:0 0 5px 5px
				li
					display:block
					height:70px
					line-height:70px
					color: #424242
					&:hover
						background-color:#E0E0E0
